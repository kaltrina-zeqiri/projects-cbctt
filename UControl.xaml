<UserControl x:Class="UniversityTimetabling.UControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UniversityTimetabling"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="gridPanel" MouseEnter="gridPanel_MouseEnter" MouseLeave="gridPanel_MouseLeave" MouseDown="pnlBackground_MouseDown">
        <Border x:Name="pnlBackground" Background="#EEEEEE" Margin="0.5" BorderThickness="0" BorderBrush="DarkGray" Opacity="1"></Border>
        <TextBlock x:Name="lblCaption" TextAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="lblRow" Visibility="Hidden"></TextBlock>
        <TextBlock x:Name="lblColumn" Visibility="Hidden"></TextBlock>
        <TextBlock x:Name="lblClicked" Visibility="Hidden"></TextBlock>
        <TextBlock x:Name="lblBlockedAssign" Visibility="Hidden"></TextBlock>
        <TextBlock x:Name="lblControlAssigned" Visibility="Hidden"></TextBlock>
    </Grid>
</UserControl>
